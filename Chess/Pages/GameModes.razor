@page "/GameModes"
@inject NavigationManager NavManager
<style>
    body {
        background-color: #B5C4B5;
        
        
    }

    .GameModeCircle1 {
        width: 30vw;
        height: 10vh;
        right:30% ;
        top:20%;
        position: absolute;
        background: #B5C4B5;
        border-radius: 26px;
        transition: background-color 0.2s; 
        transition: transform 0.1s ease;    
    }
    .GameModeCircle2 {
        width: 30vw;
        height: 10vh;
        right:30% ;
        top:40%;
        position: absolute;
        background: #B5C4B5;
        border-radius: 26px;
        transition: background-color 0.2s; 
        transition: transform 0.1s ease;    
    }
    .GameModeCircle3 {
        width: 30vw;
        height: 10vh;
        right:30% ;
        top:60%;
        position: absolute;
        background: #B5C4B5;
        border-radius: 26px;
        transition: background-color 0.2s; 
        transition: transform 0.1s ease;    
    }
    .GameModeCircle4 {
        width: 30vw;
        height: 10vh;
        right:30% ;
        top:80%;
        position: absolute;
        background: #B5C4B5;
        border-radius: 26px;
        transition: background-color 0.2s; 
        transition: transform 0.1s ease;    
    }
    .GameModeCircle5 {
        width: 20vw;
        height: 10vh;
        right:5% ;
        top:20%;
        position: absolute;
        background: #B5C4B5;
        border-radius: 26px;
        transition: background-color 0.2s; 
        transition: transform 0.1s ease;    
    }
    .AtomicChess,
    .HordeMode,
    .CardChess,
    .FogOfWar
     {
        width: 30vw;
        height: 10vh;
        color: white;
        top:-15%;
        font-size: 50px;
        font-family: 'Inter', sans-serif;
        position: absolute;
        z-index: 2;
        transition: transform 0.1s ease; 
        left:10%;

    }
    .Stacking{
width: 15vw;
        height: 10vh;
        color: white;
        font-size: 25px;
        font-family: 'Inter', sans-serif;
        position: absolute;
        z-index: 2;
        transition: transform 0.1s ease; 
        left:10%;
    }
    
    .GameModeCircle1:hover {
        background: #A5A29E; 
        transform: scale(0.95);
       
    }
    .GameModeCircle2:hover {
        background: #A5A29E;
        transform: scale(0.95);
       
    }
    .GameModeCircle3:hover {
        background: #A5A29E;
        transform: scale(0.95);
       
    }
    .GameModeCircle4:hover {
        background: #A5A29E; 
        transform: scale(0.95);
       
    }
    .GameModeCircle5:hover {
        background: #A5A29E; 
        transform: scale(0.95);
       
    }
    
    
</style>

<div class="Rectangle8" style="width: 80vw; height: 85vh; background: #804D6E; border-radius: 37px"></div>
<div class="GameModeCircle1" @onclick="NavigateToAtomicChess">
    <div class="AtomicChess">Atomic Chess<br/></div>
    </div>
<div class="GameModeCircle2" @onclick="NavigateToHordeMode">
    <div class="HordeMode">Horde Mode<br/></div>   
    </div>
<div class="GameModeCircle3" @onclick="NavigateToCardChess">
    <div class="CardChess">Card Chess<br/></div>
    </div>
<div class="GameModeCircle4" @onclick="NavigateToFogOfWar">
    <div class="FogOfWar">Fog Of War<br/></div>
    </div>
<div class="GameModeCircle5" @onclick="NavigateToStacking">
    <div class="Stacking">Stacking Mode<br/></div>
    </div>

@code {
    private void NavigateToAtomicChess()
    {
        NavManager.NavigateTo("AtomicChess");
        
    }
    private void NavigateToHordeMode()
    {
       
        NavManager.NavigateTo("HordeMode");

    }
    private void NavigateToCardChess()
    {
       
        NavManager.NavigateTo("CardChess");

    }
    private void NavigateToFogOfWar()
    {
       
        NavManager.NavigateTo("FogOfWar");

    }
    private void NavigateToStacking()
    {
       
        NavManager.NavigateTo("stackedGames");

    }
}